@model PsiraRecruitmentSystem.Models.ApplicantDetails
@{
    var userId = Context.Session.GetInt32("UserId");
}

@{
    ViewData["Title"] = "Complete Your Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            @* Wider column for a spacious form layout *@
            <h2 class="mb-4 text-center text-primary">@ViewData["Title"]</h2>
            <p class="lead text-center text-muted mb-5">
                Tell us more about your professional background to unlock tailored job recommendations and enhance your visibility to employers.
            </p>

            <form asp-action="Create" asp-controller="Applicant" method="post">
                @if (userId != null)
                {
                    <input type="hidden" asp-for="UserId" value="@userId" />
                }

                <div class="card shadow-lg mb-5">
                    <div class="card-header bg-primary text-white py-3">
                        <h4 class="mb-0">Current Professional Status</h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3 mb-3">
                            @* Using g-3 for consistent gutter spacing *@
                            <div class="col-md-6">
                                <label asp-for="HighestQualification" class="form-label">Highest Qualification</label>
                                <select name="HighestQualification" class="form-select" required>
                                    <option value="">-- Select Qualification --</option>
                                    <option value="Diploma">Diploma</option>
                                    <option value="Degree">Degree</option>
                                    <option value="Honours">Honours</option>
                                    <option value="Masters">Masters</option>
                                    <option value="PhD">PhD</option>
                                </select>
                                <span asp-validation-for="HighestQualification" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DriversLicense" class="form-label">Driver's License</label>
                                <select asp-for="DriversLicense" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option>Yes</option>
                                    <option>No</option>
                                </select>
                                <span asp-validation-for="DriversLicense" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="CurrentPosition" class="form-label">Current Position</label>
                                <input asp-for="CurrentPosition" class="form-control" />
                                <span asp-validation-for="CurrentPosition" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CurrentCompany" class="form-label">Current Company</label>
                                <input asp-for="CurrentCompany" class="form-control" />
                                <span asp-validation-for="CurrentCompany" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="CurrentSalary" class="form-label">Current Salary (ZAR)</label>
                                <input asp-for="CurrentSalary" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="CurrentSalary" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="YearsInCurrentPosition" class="form-label">Years with Current Employer</label>
                                <select asp-for="YearsInCurrentPosition" class="form-select">
                                    <option>--Select--</option>
                                    <option value="lessThan12Months">Less than 12 Months</option>
                                    <option value="1-2Years">1 - 2 Years</option>
                                    <option value="2-5Years">2 - 5 Years</option>
                                    <option value="5+Years">5+ Years</option>
                                </select>
                                <span asp-validation-for="YearsInCurrentPosition" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card shadow-lg mb-5">
                    <div class="card-header bg-secondary text-white py-3">
                        <h4 class="mb-0">Overall Experience</h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <label asp-for="TotalExperienceInYears" class="form-label">Total Professional Experience (Years)</label>
                            <input asp-for="TotalExperienceInYears" class="form-control" type="number" min="0" />
                            <span asp-validation-for="TotalExperienceInYears" class="text-danger fs-6 mt-1 d-block"></span>
                        </div>
                    </div>
                </div>

                <div class="card shadow-lg mb-5">
                    <div class="card-header bg-info text-white py-3">
                        <h4 class="mb-0">Previous Employment (Optional)</h4>
                    </div>
                    <div class="card-body p-4">
                        <div class="row g-3 mb-3">
                            <div class="col-md-6">
                                <label asp-for="PreviousCompany" class="form-label">Previous Company</label>
                                <input asp-for="PreviousCompany" class="form-control" />
                                <span asp-validation-for="PreviousCompany" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PreviousPosition" class="form-label">Previous Position Held</label>
                                <input asp-for="PreviousPosition" class="form-control" />
                                <span asp-validation-for="PreviousPosition" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="PeriodFrom" class="form-label">Period From</label>
                                <input asp-for="PeriodFrom" class="form-control" type="date" />
                                <span asp-validation-for="PeriodFrom" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PeriodTo" class="form-label">Period To</label>
                                <input asp-for="PeriodTo" class="form-control" type="date" />
                                <span asp-validation-for="PeriodTo" class="text-danger fs-6 mt-1 d-block"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-center gap-3">
                    @* Centered buttons with spacing *@
                    <button type="submit" class="btn btn-primary btn-lg px-5">Submit Profile</button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}