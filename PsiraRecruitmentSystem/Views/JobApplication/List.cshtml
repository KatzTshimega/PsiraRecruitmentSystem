@model IEnumerable<PsiraRecruitmentSystem.Models.JobPost>

@{
    ViewData["Title"] = "Available Job Posts";
}

<h2>@ViewData["Title"]</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Required Qualification</th>
                <th>Required Experience (Years)</th>
                <th>Date Posted</th>
                <th>Closing Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                <tr>
                    <td>@job.Title</td>
                    <td>@job.Description</td>
                    <td>@job.RequiredQualification</td>
                    <td>@job.RequiredExperienceYears</td>
                    <td>@job.DatePosted.ToString("dd MMM yyyy")</td>
                    <td>@job.ClosingDate.ToString("dd MMM yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">No job posts available at the moment.</p>
}
