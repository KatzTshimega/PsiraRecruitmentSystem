@model PsiraRecruitmentSystem.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-primary border-3 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h3 class="mb-0 fw-bold"><i class="bi bi-person-plus-fill me-2"></i> Create Your Account</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" enctype="multipart/form-data" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="All" class="text-danger mb-4 fs-6"></div>

                        <h4 class="mb-3 text-secondary border-bottom pb-2"><i class="bi bi-person-circle me-2"></i> Personal Information</h4>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Username" class="form-label fw-bold">Username</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Username" class="form-control" placeholder="Enter your Username" required />
                                    <span asp-validation-for="Username" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-bold">First Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Name" class="form-control" placeholder="Enter your first name" required />
                                    <span asp-validation-for="Name" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Surname" class="form-label fw-bold">Last Name</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                                    <input asp-for="Surname" class="form-control" placeholder="Enter your last name" required />
                                    <span asp-validation-for="Surname" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="IdNumber" class="form-label fw-bold">ID Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-person-vcard"></i></span>
                                    <input asp-for="IdNumber" class="form-control" placeholder="Your 13-digit SA ID number" required />
                                    <span asp-validation-for="IdNumber" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>

                        <h4 class="mb-3 text-secondary border-bottom pb-2"><i class="bi bi-envelope-fill me-2"></i> Contact & Login Details</h4>
                        <div class="row g-3 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-bold">Email Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                    <input asp-for="Email" type="email" class="form-control" placeholder="your@example.com" required />
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CellPhoneNumber" class="form-label fw-bold">Cell Phone Number</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-phone"></i></span>
                                    <input asp-for="CellPhoneNumber" class="form-control" placeholder="e.g., 0821234567" required />
                                    <span asp-validation-for="CellPhoneNumber" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="WorkNumber" class="form-label fw-bold">Work Number (Optional)</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                    <input asp-for="WorkNumber" class="form-control" placeholder="e.g., 0119876543" />
                                    <span asp-validation-for="WorkNumber" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-bold">Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" required />
                                    <span asp-validation-for="Password" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label fw-bold">Confirm Password</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" required />
                                    <span asp-validation-for="ConfirmPassword" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>

                        <h4 class="mb-3 text-secondary border-bottom pb-2"><i class="bi bi-house-door-fill me-2"></i> Residential Information</h4>
                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <label asp-for="HomeAddress" class="form-label fw-bold">Home Address</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-house"></i></span>
                                    <input asp-for="HomeAddress" class="form-control" placeholder="Street, City, Suburb" required />
                                    <span asp-validation-for="HomeAddress" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Province" class="form-label fw-bold">Province</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-geo-alt"></i></span>
                                    <input asp-for="Province" class="form-control" placeholder="e.g., Gauteng" required />
                                    <span asp-validation-for="Province" class="invalid-feedback"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PostalCode" class="form-label fw-bold">Postal Code</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="bi bi-mailbox"></i></span>
                                    <input asp-for="PostalCode" class="form-control" placeholder="e.g., 1709" required />
                                    <span asp-validation-for="PostalCode" class="invalid-feedback"></span>
                                </div>
                            </div>
                        </div>
     
                 

                        <div class="d-grid gap-2 mt-5">
                            <button type="submit" class="btn btn-primary btn-lg fw-bold">
                                <i class="bi bi-person-plus-fill me-2"></i> Register Account
                            </button>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-box-arrow-in-right me-2"></i> Already have an account? Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Bootstrap 5 form validation initialization
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}

<style>
    .loginbackground {
        background-image: url('/images/register.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
    }
</style>

<script>
        function applyLoginBackground() {
        document.body.classList.add('loginbackground');
    }
    document.addEventListener('DOMContentLoaded', applyLoginBackground);
</script>