@model IEnumerable<PsiraRecruitmentSystem.Models.JobApplication>

@{
    ViewData["Title"] = "All Applications";
}

<h2 class="mb-4 text-center">All Job Applications</h2>

@if (!Model.Any())
{
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm text-center">
        <div class="container-fluid py-5">
            <h3 class="display-6 fw-bold text-muted mb-3">No Job Applications Yet!</h3>
            <p class="fs-5 text-muted">It looks like no applications have been submitted to any job posts.</p>
        </div>
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 p-3">
        @{
            int count = 1;
            foreach (var app in Model)
            {
                var user = app.Applicant?.User;

                <div class="col">
                    <div class="card h-100 shadow-sm border-primary">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Application #@count</h5>
                            <span class="badge bg-light text-primary fs-6">@app.JobPost?.Title</span>
                        </div>
                        <div class="card-body p-4">
                            <h6 class="card-subtitle mb-3 text-muted">Applied on: @app.DateApplied.ToString("dd MMM yyyy HH:mm")</h6>
                            <hr />

                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item px-0 pb-1 pt-0 bg-white">
                                    <strong>Applicant:</strong> @(user != null ? user.Name + " " + user.Surname : "Unknown")
                                </li>
                                <li class="list-group-item px-0 pb-1 pt-0 bg-white">
                                    <strong>Email:</strong> @(user?.Email ?? "N/A")
                                </li>
                                <li class="list-group-item px-0 pb-1 pt-0 bg-white">
                                    <strong>Phone:</strong> @(user?.CellPhoneNumber ?? "N/A")
                                </li>
                            </ul>

                            <div class="accordion accordion-flush" id="applicationDetails_@app.Id">
                                <div class="accordion-item">
                                    <h2 class="accordion-header" id="flush-headingApp_@app.Id">
                                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseApp_@app.Id" aria-expanded="false" aria-controls="flush-collapseApp_@app.Id">
                                            Job Details
                                        </button>
                                    </h2>
                                    <div id="flush-collapseApp_@app.Id" class="accordion-collapse collapse" aria-labelledby="flush-headingApp_@app.Id" data-bs-parent="#applicationDetails_@app.Id">
                                        <div class="accordion-body">
                                            <p class="mb-1"><strong>Job Description:</strong> @app.JobPost?.Description</p>
                                            <p class="mb-1"><strong>Required Qualification:</strong> @app.JobPost?.RequiredQualification</p>
                                            <p class="mb-1"><strong>Required Experience:</strong> @app.JobPost?.RequiredExperienceYears years</p>
                                            <p class="mb-1"><strong>Date Posted:</strong> @app.JobPost?.DatePosted.ToString("dd MMM yyyy")</p>
                                            <p class="mb-1"><strong>Closing Date:</strong> @app.JobPost?.ClosingDate.ToString("dd MMM yyyy")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent border-top pt-3 px-4 pb-4">
                            <div class="d-grid gap-2">
                                <a asp-controller="Applicant" asp-action="Details" asp-route-id="@app.Applicant?.Id" class="btn btn-outline-primary w-100">View Applicant Profile</a>
                                <a asp-controller="JobPost" asp-action="Details" asp-route-id="@app.JobPost?.Id" class="btn btn-outline-info w-100 mt-2">View Job Post</a>
                            </div>
                        </div>
                    </div>
                </div>
                count++;
            }
        }
    </div>
}