@model PsiraRecruitmentSystem.Models.JobPost

@{
    ViewData["Title"] = "Edit Job Post";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg p-4">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Edit Job Post</h2>
                    <hr />

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="DatePosted" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Job Title</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-briefcase"></i></span>
                                <input asp-for="Title" class="form-control" placeholder="e.g., Software Engineer" />
                            </div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Job Description</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-align-left"></i></span>
                                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Detailed job responsibilities..."></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BusinessUnit" class="form-label">Business Unit</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-building"></i></span>
                                <select asp-for="BusinessUnit" class="form-select">
                                    <option value="">-- Select Business Unit --</option>
                                    <option value="ICT">ICT</option>
                                    <option value="Human Capital">Human Capital</option>
                                    <option value="Law Enforcement">Law Enforcement</option>
                                    <option value="Finance">Finance</option>
                                </select>
                            </div>
                            <span asp-validation-for="BusinessUnit" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ManagerNames" class="form-label">Manager's Name(s)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user-tie"></i></span>
                                <input asp-for="ManagerNames" class="form-control" placeholder="e.g., Jane Doe" />
                            </div>
                            <span asp-validation-for="ManagerNames" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ManagerEmailAddress" class="form-label">Manager's Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="ManagerEmailAddress" class="form-control" type="email" />
                            </div>
                            <span asp-validation-for="ManagerEmailAddress" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequiredExperienceYears" class="form-label">Required Experience (Years)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-hourglass-half"></i></span>
                                <input asp-for="RequiredExperienceYears" class="form-control" type="number" min="0" />
                            </div>
                            <span asp-validation-for="RequiredExperienceYears" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequiredQualification" class="form-label">Required Qualification</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-graduation-cap"></i></span>
                                <select asp-for="RequiredQualification" class="form-select">
                                    <option value="">-- Select Qualification --</option>
                                    <option value="Diploma">Diploma</option>
                                    <option value="Degree">Degree</option>
                                    <option value="Honours">Honours</option>
                                    <option value="Masters">Masters</option>
                                    <option value="PhD">PhD</option>
                                </select>
                            </div>
                            <span asp-validation-for="RequiredQualification" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="RequiredDriversLicense" class="form-label">Required Driver's License</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-id-card"></i></span>
                                <select asp-for="RequiredDriversLicense" class="form-select">
                                    <option value="">-- Select --</option>
                                    <option value="Yes">Yes</option>
                                    <option value="No">No</option>
                                </select>
                            </div>
                            <span asp-validation-for="RequiredDriversLicense" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="OpeningDate" class="form-label">Opening Date</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-plus"></i></span>
                                <input asp-for="OpeningDate" class="form-control" type="date" />
                            </div>
                            <span asp-validation-for="OpeningDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClosingDate" class="form-label">Closing Date</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-calendar-minus"></i></span>
                                <input asp-for="ClosingDate" class="form-control" type="date" />
                            </div>
                            <span asp-validation-for="ClosingDate" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-action="JobPosts" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
