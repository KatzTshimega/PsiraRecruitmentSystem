@model IEnumerable<PsiraRecruitmentSystem.Models.JobPost>

@{
    ViewData["Title"] = "Closed Job Posts";
}
<div class="container">
    <h2 class="mb-4 text-center">Closed Job Posts</h2>

    @if (!Model.Any())
    {
        <div class="p-5 mb-4 bg-light rounded-3 shadow-sm text-center">
            <div class="container-fluid py-5">
                <h3 class="display-6 fw-bold text-muted mb-3">No Closed Job Posts Found!</h3>
                <p class="fs-5 text-muted">There are currently no job posts that have reached their closing date.</p>
            </div>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped shadow-sm">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">Job Title</th>
                        <th scope="col">Date Posted</th>
                        <th scope="col">Closing Date</th>
                        <th scope="col">Required Qualification</th>
                        <th scope="col">Experience (Years)</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var job in Model)
                    {
                        <tr>
                            <td>@job.Title</td>
                            <td>@job.DatePosted.ToShortDateString()</td>
                            <td>@job.ClosingDate.ToShortDateString()</td>
                            <td>@job.RequiredQualification</td>
                            <td>@job.RequiredExperienceYears</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@job.Id" class="btn btn-outline-secondary btn-sm">View Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>